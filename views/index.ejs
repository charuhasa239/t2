<html>

<head>
  <title>
    <%=title %>
  </title>
  <style>
    table {
      border-collapse: collapse;
      width: 50%;
    }

    th,
    td {
      border: 1px solid black;
      padding: 8px;
      text-align: left;
    }
  </style>
</head>

<body>
  <h1>
    <%=title %>
  </h1>
  <h2>Welcome to <%= sub %>
  </h2>
  <table style="width: 100%">
    <tr>
      <th>id</th>
      <th>term</th>
      <th>description</th>
      <th>reference</th>
    </tr>
    <% names.forEach(name)=>{ %>
      <tr>
        <td>
          <%=name.id%>
        </td>
        <td>
          <%= name.term%>
        </td>
        <td>
          <%=name.description%>
        </td>
        <td>
          <%= name.reference%>
        </td>
      </tr>

      <%});%>
  </table>
</body>

</html>